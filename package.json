{
  "name": "dataportaal-graphql",
  "license": "MPL-2.0",
  "author": "Datapunt Amsterdam",
  "version": "1.0.0",
  "main": "src/index.ts",
  "scripts": {
    "build": "tsc --build",
    "generate": "graphql-codegen --config ./src/codegen.yml",
    "postinstall": "cp .env.development .env",
    "test": "npx jest",
    "serve": "npm run build && nodemon ./lib/",
    "start": "concurrently \"nodemon --transpile-only src/index.ts\" \"npm run generate -- --watch\""
  },
  "dependencies": {
    "@elastic/elasticsearch": "^7.4.0",
    "abort-controller": "^3.0.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-graphql": "^0.9.0",
    "graphql": "^14.5.8",
    "graphql-playground-middleware-express": "^1.7.12",
    "graphql-tools": "^4.0.6",
    "jsonwebtoken": "^8.5.1",
    "memory-cache": "^0.2.0",
    "moment": "^2.24.0",
    "node-fetch": "^2.6.0",
    "remove-markdown": "^0.3.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^1.8.2",
    "@graphql-codegen/introspection": "1.8.2",
    "@graphql-codegen/typescript": "1.8.2",
    "@graphql-codegen/typescript-resolvers": "1.8.2",
    "@types/cors": "^2.8.6",
    "@types/elasticsearch": "^5.0.36",
    "@types/express": "^4.17.1",
    "@types/jest": "^24.0.25",
    "@types/jsonwebtoken": "^8.3.5",
    "@types/memory-cache": "^0.2.0",
    "@types/node": "^12.11.7",
    "@types/node-fetch": "^2.5.2",
    "@types/remove-markdown": "^0.1.1",
    "awesome-typescript-loader": "^5.2.1",
    "concurrently": "^5.0.0",
    "dotenv": "^8.2.0",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "lint-staged": "^9.5.0",
    "nodemon": "^2.0.2",
    "prettier": "^1.18.2",
    "ts-jest": "^24.2.0",
    "ts-node": "^8.4.1",
    "typescript": "^3.5.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,json,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
